{
	"name": "@writerite/apiserver",
	"version": "0.1.0",
	"description": "Apollo GraphQL implementation of WriteRite backend",
	"main": "dist/index.js",
	"repository": "https://gitlab.com/writerite/writerite",
	"author": "Johannes Choo",
	"license": "AGPL-3.0-or-later",
	"private": false,
	"dependencies": {
		"@prisma/client": "^3.4.0",
		"@types/bcrypt": "^5.0.0",
		"@types/ioredis": "^4.26.4",
		"@types/koa-helmet": "^6.0.2",
		"@types/node": "^14.17.9",
		"@types/node-fetch": "^2.5.10",
		"@types/promise-dag": "^1.0.1",
		"apollo-server-core": "^3.1.2",
		"apollo-server-errors": "^3.1.0",
		"apollo-server-koa": "^3.1.2",
		"bcrypt": "^5.0.0",
		"csv": "^5.5.0",
		"dotenv": "^10.0.0",
		"form-data": "^4.0.0",
		"google-auth-library": "^7.1.0",
		"graphql": "^15.3.0",
		"graphql-redis-subscriptions": "^2.4.0",
		"graphql-scalars": "^1.9.3",
		"ioredis": "^4.27.3",
		"jsrsasign": "^10.2.0",
		"koa": "^2.13.1",
		"koa-helmet": "^6.1.0",
		"moment": "^2.29.1",
		"nanoid": "^3.1.23",
		"nexus": "^1.0.0",
		"node-fetch": "^2.6.1",
		"promise-dag": "^1.0.0",
		"typescript": "^4.2.4"
	},
	"devDependencies": {
		"@apollo/rover": "^0.4.0",
		"@types/jest": "^27.0.0",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"draft-js": "^0.11.7",
		"eslint": "^8.1.0",
		"eslint-plugin-jest": "^25.2.2",
		"eslint-plugin-jsdoc": "^37.0.3",
		"graphql-subscriptions": "^1.1.0",
		"jest": "^27.0.1",
		"prisma": "^3.4.0",
		"subscriptions-transport-ws": "^0.11.0",
		"ts-jest": "^27.0.0",
		"ts-node": "^10.0.0",
		"ts-node-dev": "^1.1.6"
	},
	"scripts": {
		"build": "tsc",
		"init:run": "prisma migrate deploy && rover graph publish $APOLLO_GRAPH_ID@$APOLLO_GRAPH_VARIANT --schema generated/schema.graphql",
		"app:start": "node dist/src/index.js",
		"dev": "export $(xargs -a .env -d '\\n') && ts-node-dev --transpile-only --no-notify src/index.ts",
		"generate": "export $(xargs -a .env -d '\\n') && prisma generate && ts-node --transpile-only src/schema",
		"test:integration": "export $(xargs -a .env -d '\\n') && npm run generate && jest --runInBand test/integration"
	}
}
