{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "dev:init",
			"label": "Set up default (usu. localhost) environment for development and testing",
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"type": "npm",
			"script": "test:integration",
			"label": "Run integration test against default (usu. localhost) environment",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Build an image and deploy it to local cluster",
			"command": "./localdev-pipeline.sh",
			"options": {
				"cwd": "${workspaceFolder:dev-config}",
				"shell": {
					"executable": "zsh"
				}
			},
			"group": "build"
		}
	]
}